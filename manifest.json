    "share_target": {
        "action": "/?action=share",
        "method": "POST",
        "enctype": "multipart/form-data",
        "params": {
            "title": "title",
            "text": "text",
            "url": "url",
            "files": [
                {
                    "name": "file",
                    "accept": ["text/plain", "application/json", ".txt", ".json", ".csv"]
                }
            ]
        }
    },
    
    "file_handlers": [
        {
            "action": "/?action=import-anki",
        "accept": {
            "application/x-anki": [".apkg"],
            "application/zip": [".apkg"]
            }
            "action": "/?action=import",
            "accept": {
                "application/json": [".json"],
                "text/plain": [".txt"],
                "text/csv": [".csv"]
            }
        }
    ],
    
    "protocol_handlers": [
        {
            "protocol": "web+lexora",
            "url": "/?action=protocol&data=%s"
        }
    ],
    
    "launch_handler": {
        "client_mode": ["navigate-existing", "auto"]
    },
    
    "handle_links": "preferred",
    
    "edge_side_panel": {
        "preferred_width": 400
    },
    
    "widgets": [
